<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Add an Alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPicture"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Take a picture"
        app:layout_constraintEnd_toEndOf="@+id/btnAlarm"
        app:layout_constraintStart_toStartOf="@+id/btnAlarm"
        app:layout_constraintTop_toBottomOf="@+id/btnAlarm" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Make a call"
        app:layout_constraintEnd_toEndOf="@+id/btnPicture"
        app:layout_constraintStart_toStartOf="@+id/btnPicture"
        app:layout_constraintTop_toBottomOf="@+id/btnPicture" />

    <Button
        android:id="@+id/btnMessage"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Make a message"
        app:layout_constraintEnd_toEndOf="@+id/btnCall"
        app:layout_constraintStart_toStartOf="@+id/btnCall"
        app:layout_constraintTop_toBottomOf="@+id/btnCall" />

    <Button
        android:id="@+id/btnRepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Open Git Repo"
        app:layout_constraintEnd_toEndOf="@+id/btnMessage"
        app:layout_constraintStart_toStartOf="@+id/btnMessage"
        app:layout_constraintTop_toBottomOf="@+id/btnMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>